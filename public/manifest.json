{
  "manifest_version": 3,
  "name": "DevFlow",
  "version": "1.0.0",
  "description": "Maximize your flow state with essential developer tools, screen recording, and focus timers.",
  "action": {
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "tabs",
    "desktopCapture",
    "storage",
    "activeTab",
    "notifications",
    "sidePanel"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "Command+Shift+D"
      },
      "description": "Open DevFlow"
    },
    "open_recorder": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Open Screen Recorder"
    }
  }
}